<h1>New Game</h1>

<%= form_with model: @game do |form| %>
  <div>
    <%= form.label :word %><br>
    <%= form.text_field :word %>
    <% @game.errors.full_messages_for(:word).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>